{# templates/contact/contact.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <main>
       {# <div class="contact">#}
        <div>

            <h1 class="title">Pour nous contacter</h1>

            <div class="contact">

                {{ form_start(form) }}
                <div class="select-list" >
                    {{ form_errors(form.demande) }}
                    <input type="radio" name="{{ field_name(form.demande) }}">
                    <span class="placeholder">{{ field_label(form.demande) }}</span>

                    {% for label, value in field_choices(form.demande) %}

                        <label class="option">
                            <input class='reset-radio' type="radio" name="{{ field_name(form.demande) }}" value='{{ value }}'>
                            <span class="list-title">{{ label }}</span>
                        </label>
                    {% endfor %}
                </div>
                {{ form_row(form.email) }}
                {{ form_row(form.message) }}
                <button class="button" type="submit">Envoyer</button>
                {{ form_end(form) }}
            </div>

            <div class="Coordon">
                <p>Coordonn√©es de l'entreprise:</p><br>
                <ul>
                    <li>05.56.67.78.89</li>
                    <li>geocode@wild.com</li>
                    <li>171 Rue Lucien Faure, 33300 BORDEAUX</li>
                </ul>
            </div>
        </div>
    </main>
{% endblock %}

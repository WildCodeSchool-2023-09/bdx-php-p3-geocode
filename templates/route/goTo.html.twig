{% block body %}
    <div class="main map"
         id="map"
        {{ stimulus_controller('route') }}
        data-departure-longitude = '{{ departure.point.longitude }}'
        data-departure-latitude = '{{ departure.point.latitude }}'
        data-arrival-longitude = '{{ arrival.point.longitude }}'
        data-arrival-latitude = '{{ arrival.point.latitude }}'
        data-step = {{ step }}
    ></div>
{% endblock %}

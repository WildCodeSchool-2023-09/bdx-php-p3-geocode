{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
        {% include 'components/_adminsidebar.html.twig' %}
        <main class="main-vertical">



    <table class="table">
        <thead>

                <tr>
                    <th>Id</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Birthday</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>

        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                {# {{ user.roles ? user.roles|json_encode : '' }} #}
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
                <td>{{ user.gender }}</td>
                <td>{{  user.email }}</td>
{#                {{ user.picture }}#}
                {# {{ user.resetToken }} #}
{#                 <a href="{{ path('app_profile_user_picture', {'id': app.user.id}) }}"></>#}
                <td>
                    <a href="{{ path('app_admin_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a href="{{ path('app_admin_user_new') }}">Create new</a>
        </main>


{% endblock %}

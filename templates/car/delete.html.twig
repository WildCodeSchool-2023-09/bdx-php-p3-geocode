{% extends 'base.html.twig' %}

{% block title %}Delete Car{% endblock %}

{% block body %}
<main>

    <div >
        <h1 class="title">Supprimer mon véhicule</h1>
        <form method="post" action="{{ path('app_car_delete', {'id': car.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre véhicule ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ car.id) }}">
            <button class="button ">Supprimer</button>
        </form>
    </div>
</main>
{% endblock %}
